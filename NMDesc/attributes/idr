from metapredict import meta

input_file = 'plus2_control1.txt'
output_file = 'plus2_control1_out.txt'

with open(input_file, "r") as f:
     uniprot_ids = [line.strip() for line in f if line.strip()]

with open(output_file, "w") as out_f:
    out_f.write("UniProt_ID\tDisordered_Domain_Boundaries\n")  # Header
    for uniprot_id in uniprot_ids:
        try:
            result = meta.predict_disorder_domains_uniprot(uniprot_id)
            disorder_boundaries = result.disordered_domain_boundaries
            boundaries_str = str(disorder_boundaries) if disorder_boundaries else "No Data"
            out_f.write(f"{uniprot_id}\t{boundaries_str}\n")
            print(f"Processed {uniprot_id}")  # Optional progress log

        except Exception as e:
            print(f"Error processing {uniprot_id}: {e}")
            out_f.write(f"{uniprot_id}\tError\n")  # Log errors

print(f"Results saved to {output_file}")
